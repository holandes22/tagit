Link:
<input
  data-test-link
  value={{entry.link}}
  class={{if (and showInvalid validations.attrs.entry.link.isInvalid) "error" ""}}
  oninput={{action (mut entry.link) value="target.value"}}>

{{#if showInvalid}}
<div data-test-link-error>
  {{validations.attrs.entry.link.message}}
</div>
{{/if}}

Notes:
<input
  type="text"
  value={{entry.notes}}
  class={{if validations.attrs.entry.notes.isValid "error" ""}}
  oninput={{action (mut entry.notes) value="target.value"}}>

{{#if showInvalid}}
<div data-test-notes-error>
  {{validations.attrs.entry.notes.message}}
</div>
{{/if}}

Archived?:
<input
  type="checkbox"
  value={{entry.archived}}
  oninput={{action (mut entry.archived) value="target.value"}}>

Ranking:
<input
  type="number"
  value={{entry.ranking}}
  class={{if validations.attrs.entry.ranking.isValid "error" ""}}
  oninput={{action (mut entry.ranking)
  value="target.value"}} min=0>

{{#if showInvalid}}
<div data-test-ranking-error>
  {{validations.attrs.entry.ranking.message}}
</div>
{{/if}}

Tags:
<input
  value={{entry.tags}}
  oninput={{action (mut entry.tags) value="target.value"}}>

<button class={{if validations.isInvalid "disabled" ""}} data-test-save-btn {{action "save"}}>Save</button>
