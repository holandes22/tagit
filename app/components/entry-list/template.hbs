{{#if entries}}
<div data-test-entries class="ui very relaxed divided large animated list">
  {{#each (sort-by sortBy (if showArchived entries (filter-by "archived" false entries))) as |entry|}}
    {{entry-list-item entry=entry}}
  {{/each}}
</div>
{{else}}
<div data-test-empty-message>{{t "entry.list.empty"}}</div>
{{/if}}
